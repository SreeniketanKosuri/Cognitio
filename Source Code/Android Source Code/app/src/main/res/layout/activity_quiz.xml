<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuizActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/triviaColor"/>
            <TextView
                android:id="@+id/currentQuestion"
                android:layout_alignParentStart="true"
                android:layout_marginStart="5dp"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/hkgrotesk"
                android:textAlignment="center"
                android:text="1/5"
                android:gravity="center_vertical|end"
                android:textSize="20sp"
                />
            <TextView
                android:id="@+id/currentScore"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="5dp"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/hkgrotesk"
                android:textAlignment="center"
                android:text="Score: 0"
                android:gravity="center_vertical|end"
                android:textSize="20sp"
                />
            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_alignParentBottom="true"
                style="@style/CustomProgressBar"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:progress="0"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="60dp">
            <TextView
                android:id="@+id/currentCategory"
                android:layout_alignParentStart="true"
                android:layout_marginStart="5dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/hkgrotesk"
                android:textAlignment="textStart"
                android:text=""
                android:textColor="@android:color/black"
                android:gravity="center_vertical|start"
                android:textSize="20sp"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="350dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp">
            <TextView
                android:id="@+id/triviaQuestion"
                android:layout_centerHorizontal="true"
                android:layout_marginEnd="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/hkgrotesk"
                android:textAlignment="center"
                android:alpha="0"
                android:text=""
                android:textColor="@android:color/black"
                android:gravity="center_vertical|end"
                android:textSize="20sp"
                />
        </RelativeLayout>
        <TableLayout
            android:id="@+id/buttonLayout"
            android:layout_width="350dp"
            android:layout_height="275dp"
            android:alpha="0"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true">
            <Button
                android:id="@+id/triviaButton1"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:background="@color/triviaColor"
                android:layout_marginBottom="10dp"
                android:textAlignment="center"
                android:onClick="onAnswerSelect"
                android:gravity="center_vertical|end"/>
            <Button
                android:id="@+id/triviaButton2"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:background="@color/triviaColor"
                android:layout_marginBottom="10dp"
                android:textAlignment="center"
                android:onClick="onAnswerSelect"
                android:gravity="center_vertical|end"/>
            <Button
                android:id="@+id/triviaButton3"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:background="@color/triviaColor"
                android:layout_marginBottom="10dp"
                android:textAlignment="center"
                android:onClick="onAnswerSelect"
                android:gravity="center_vertical|end"/>
        </TableLayout>
        <RelativeLayout
            android:id="@+id/relativeNiceJobLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0">
            <TableLayout
                android:id="@+id/tableLayoutNiceJob"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true">
                <RelativeLayout>
                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/smileAnim"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_centerHorizontal="true"

                        app:lottie_autoPlay="false"
                        app:lottie_loop="false"
                        app:lottie_rawRes="@raw/smile" />
                </RelativeLayout>
                <RelativeLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="Nice Job!"
                        android:textColor="@android:color/black"
                        android:fontFamily="@font/hkgrotesk"
                        android:textAlignment="center"
                        android:gravity="center|center"/>
                </RelativeLayout>
            </TableLayout>
            <Button
                android:id="@+id/triviaBack"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:layout_alignBottom="@+id/tableLayoutNiceJob"
                android:layout_marginBottom="-70dp"
                android:background="@drawable/button"
                android:onClick="returnButton"
                android:text="Back"
                android:textColor="@android:color/white"
                android:textSize="18sp" />
        </RelativeLayout>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>